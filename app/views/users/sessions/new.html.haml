%div.container.login
  %div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
    %div.panel.panel-default
      %div.panel-heading
        %div.panel-title Log In
      %div.panel-body
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          %div.form-group
            %div.input-group
              %span.input-group-addon
                %i.fa.fa-user
              = f.text_field :email, placeholder: "Email Address", class: "form-control", autofocus: true
          %div.form-group
            %div.input-group
              %span.input-group-addon
                %i.fa.fa-lock
              = f.password_field :password, placeholder: "Password", class: "form-control"
          - if devise_mapping.rememberable?
            %div.checkbox
              %label
                = f.check_box :remember_me, as: :boolean
                Remember Me

          %div.form-group{style: "margin-top:10px"}
            = f.submit "Log in", class: "btn btn-success"
            - if devise_mapping.omniauthable?
              - resource_class.omniauth_providers.each do |provider|
                = link_to "Log in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-provider-#{provider}"
                %br

          %div.form-group
            - if devise_mapping.registerable? && controller_name != 'registrations'
              = link_to "Sign up", new_registration_path(resource_name)
              %br

            - if devise_mapping.recoverable?
              = link_to "Forgot your password?", new_password_path(resource_name)
              %br

            - if devise_mapping.confirmable?
              = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
              %br

            - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email)
              = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)
              %br
