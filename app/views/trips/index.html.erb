<h1><%= current_user.name %>'s trips</h1>

<div class="trip-list">
  <% @trips.each do |trip| %>
    <div class="trip">
      <h2 class="name"><%= trip.name %> <span class="dates"><%= format_date trip.begin_date %> - <%= format_date trip.end_date %></span></h2>
      <%= render partial: "shared/flights_large", locals: { flights: trip.flights } %>
    </div>
  <% end %>
</div>

<%= link_to 'New Trip', new_trip_path %>
