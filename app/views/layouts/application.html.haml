!!! 5
%html
  %head
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title
      = content_for?(:title) ? yield(:title) : "#{params[:controller].titlecase} #{params[:id]}"
      \- My Flight Map
    %meta{name: "description", content: content_for?(:description) ? yield(:description) : "Myflightmap"}
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyB7XoHytMWFuh--1T-F0u2bf0QtNWcHBqI&amp;sensor=false"
    = csrf_meta_tags
  %body
    %header
      = render 'shared/navigation'
    %main.container{role: "main"}
      = render 'shared/messages'
      = yield
