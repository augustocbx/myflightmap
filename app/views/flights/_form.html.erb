<%= simple_form_for(@flight) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-2"><%= f.input :flight_code, placeholder: "Ex) SQ305" %></div>
      <div class="col-md-3"><%= f.input :airline_id, as: :hidden %><%= f.input :airline_name %></div>
    </div>
    <div class="row">
      <div class="col-md-3"><%= f.input :depart_airport, as: :string %></div>
      <div class="col-md-3 col-md-offset-1"><%= f.input :arrive_airport, as: :string %></div>
      <div class="col-md-1 col-md-offset-1"><%= f.input :distance %></div>
    </div>
    <div class="row">
      <div class="col-md-2"><%= f.input :depart_date, as: :string %></div>
      <div class="col-md-1"><%= f.input :depart_time, as: :string, placeholder: "HH:MM", label: "Time" %></div>
      <div class="col-md-2 col-md-offset-1"><%= f.input :arrive_date, as: :string %></div>
      <div class="col-md-1"><%= f.input :arrive_time, as: :string, placeholder: "HH:MM", label: "Time" %></div>
      <div class="col-md-1 col-md-offset-1"><%= f.input :duration %></div>
    </div>
    <div class="row">
      <div class="col-md-1"><%= f.input :seat %></div>
      <div class="col-md-2"><%= f.input :seat_class, collection: ["Economy", "Economy Plus", "Business", "First", "Suite"] %></div>
      <div class="col-md-2"><%= f.input :seat_location, collection: ["Window", "Middle", "Aisle"] %></div>
    </div>
    <div class="row">
      <div class="col-md-2"><%= f.input :aircraft_type %></div>
      <div class="col-md-2"><%= f.input :aircraft_registration %></div>
      <div class="col-md-2"><%= f.input :aircraft_name %></div>
    </div>
    <div class="row">
      <div class="col-md-2"><%= f.input :flight_role, collection: ["Passenger", "Crew"] %></div>
      <div class="col-md-2"><%= f.input :purpose, collection: ["Pleasure", "Business", "Crew"] %></div>
    </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
