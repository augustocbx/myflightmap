%div.container.signup
  %div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
    %div.panel.panel-default
      %div.panel-heading
        %div.panel-title Forgot your password?
      %div.panel-body
        = form_for(resource, as: resource_name, url: password_path(resource_name)) do |f|
          %div.form-group
            %div.input-group
              %span.input-group-addon
                %i.fa.fa-envelope
              = f.text_field :email, placeholder: "Email Address", class: "form-control", autofocus: true

          %div.form-group{style: "margin-top:10px"}
            = f.submit "Send password reset instrictions", class: "btn btn-success"
