- content_for :title, t('actions.change_password')

%div.row
  %div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
    %div.panel.panel-default
      %div.panel-heading
        %div.panel-title Change your password
      %div.panel-body
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = error_messages
          = f.hidden_field :reset_password_token
          %div.form-group
            %div.input-group
              %span.input-group-addon
                %i.fa.fa-lock
              = f.password_field :password, placeholder: "New password", class: "form-control", autofocus: true
            %div.input-group
              %span.input-group-addon
                %i.fa.fa-lock
              = f.password_field :password_confirmation, placeholder: "Confirm new password", class: "form-control"

          %div.form-group{style: "margin-top:10px"}
            = f.submit "Change password", class: "btn btn-success"
