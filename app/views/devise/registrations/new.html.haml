%h2 Sign up

%div.container
  %div.row
    %div.col-xs-12
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :vertical_form) do |f|
        = f.error_notification

        %div.form-inputs
          = f.input :email, required: true, autofocus: true
          = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
          = f.input :password_confirmation, required: true

        %div.form-actions
          = f.button :submit, "Sign up"
  %div.row
    %div.col-xs-12.devise_links
      = render "devise/shared/links"
