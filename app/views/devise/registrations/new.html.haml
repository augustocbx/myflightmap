%div.container.signup
  %div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
    %div.panel.panel-default
      %div.panel-heading
        %div.panel-title Sign Up
      - if devise_mapping.omniauthable?
        %div.panel-body.socials
          - resource_class.omniauth_providers.each do |provider|
            = link_to "Sign up with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-provider-#{provider}"
      %div.panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          %div.form-group
            %div.input-group
              %span.input-group-addon
                %i.fa.fa-envelope
              = f.text_field :email, placeholder: "Email Address", class: "form-control", autofocus: true
          %div.form-group
            %div.input-group
              %span.input-group-addon
                %i.fa.fa-user
              = f.text_field :username, placeholder: "Username/nickname", class: "form-control"
          %div.form-group
            %div.input-group
              %span.input-group-addon
                %i.fa.fa-lock
              = f.password_field :password, placeholder: "Password", class: "form-control"
          %div.form-group
            %div.input-group
              %span.input-group-addon
                %i.fa.fa-lock
              = f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control"

          %div.form-group{style: "margin-top:10px"}
            = f.submit "Sign up", class: "btn btn-success"
