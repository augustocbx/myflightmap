%h2= resource_name.to_s.humanize

= simple_form_for(resource, as: resource_name, wrapper: :vertical_form, url: registration_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification

  %div.form-inputs
    = f.input :email, required: true, autofocus: true

    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %p Currently waiting confirmation for: #{resource.unconfirmed_email}

    = f.input :username

    - if @user.is_password_changeable?
      = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false
      = f.input :password_confirmation, required: false
      = f.input :current_password, hint: "we need your current password to confirm your changes"

  %div.form-actions
    = f.button :submit, "Update"

= link_to "Back", :back
